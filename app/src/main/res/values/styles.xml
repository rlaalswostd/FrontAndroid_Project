<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 배경색을 흰색으로 설정하거나 로고 등 다른 요소를 배경에 추가할 수 있습니다 -->
        <item name="android:windowBackground">@color/white</item> <!-- 배경 이미지 설정 -->
        <item name="android:windowNoTitle">true</item> <!-- 제목 숨기기 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 투명하게 설정 -->
    </style>

    <!-- 다크모드 배경 색 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>


</resources>