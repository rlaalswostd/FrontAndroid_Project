<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#535353"
                android:endColor="#535353" />
            <corners android:radius="24dp" />
            <padding android:top="12dp" android:bottom="12dp" android:left="16dp" android:right="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#707070"
                android:endColor="#707070" />
            <corners android:radius="24dp" />
            <padding android:top="12dp" android:bottom="12dp" android:left="16dp" android:right="16dp" />
            <shadowColor android:color="#80000000" />
        </shape>
    </item>
</selector>
