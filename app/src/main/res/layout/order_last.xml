<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="WebViewLayout">

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/orderlastTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="정말 계산하시겠습니까?"
        android:paddingTop="16dp"
        android:fontFamily="@font/orderfontbold"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <!-- 메시지 -->
    <TextView
        android:id="@+id/orderlastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:fontFamily="@font/alertfont"
        android:text="확인을 누르면 주문이 완료됩니다"
        android:textColor="@color/gray"
        android:textSize="16sp" />

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="748dp"
        android:layout_gravity="center"
        android:layout_height="420dp"
        android:layout_marginTop="20dp"
        android:background="#000"
        android:layout_centerInParent="true"/>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/orderlastOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/order_lastokbtn"
            android:fontFamily="@font/alertfont"
            android:text="확인"
            android:textSize="20dp"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/orderlastNO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/order_lastnobtn"
            android:fontFamily="@font/alertfont"
            android:text="취소"
            android:textSize="20dp"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>