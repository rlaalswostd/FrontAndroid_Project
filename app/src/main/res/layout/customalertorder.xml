<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/customalertorderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="장바구니 한 번 더 확인해주세요"
        android:fontFamily="@font/alertfont"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <!-- 메시지 -->
    <TextView
        android:id="@+id/customalertorderMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:fontFamily="@font/alertfont"
        android:text="확인을 누르면 주문이 완료됩니다"
        android:textColor="@color/gray"
        android:textSize="16sp" />

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/customalertorderButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/orderoknobtn"
            android:fontFamily="@font/alertfont"
            android:text="확인"
            android:textSize="20dp"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/customalertorderButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/orderoknobtn"
            android:fontFamily="@font/alertfont"
            android:text="취소"
            android:textSize="20dp"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>